#!/usr/bin/env bash
# This script is displaying "Holberton School" 10 times

while IFS=: read -r f1 f2 f3 f4 f5 f6 f7
do
    echo "The user %s is part of the %s gang, lives in %s and rides %s. %s's place is protected by the passcode %s, more info about the user here: %s" '$f1' '$f4' '$f6' '$f7' '$f3' '$f2' '$f5'
done < /etc/passwd
